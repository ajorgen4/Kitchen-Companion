<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/shopListQuantityMinusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/minus_icon"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/shopListQuantityEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:text="3"
        android:textSize="20sp"
        android:textColor="?android:textColorPrimary"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:background="@drawable/quantity_background"/>

    <ImageView
        android:id="@+id/shopListQuantityPlusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/plus_icon"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/shopListFoodName"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:layout_marginEnd = "205dp"
        android:layout_marginStart="3dp"
        android:text="Item text"
        android:textColor="?android:textColorPrimary" />

    <ImageView
        android:id="@+id/closeShopListItemButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/trash_icon"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/pushShopListItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="3dp"
        android:src="@drawable/check"
        android:layout_gravity="center"
        android:visibility="gone"/>


</LinearLayout>